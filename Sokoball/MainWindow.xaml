<Window x:Class="Sokoball.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sokoball"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background.png"/>
        </Grid.Background>
        <Label x:Name="lblTitle" Foreground ="red" Content="SOKOBALL" HorizontalAlignment="Center" VerticalAlignment="Top" Height="126" Width="612" FontSize="100" FontFamily="MV Boli" Background="{x:Null}" FontWeight="Bold"/>
        <Button x:Name="btnPlay" Foreground= "red"  Content="PLAY" HorizontalAlignment="Center" Margin="0,264,0,0" VerticalAlignment="Top" FontSize="25" Height="58" Width="132" FontFamily="MV Boli" Background="{x:Null}" FontWeight="Bold" Click="btnPlay_Click"/>

    </Grid>
</Window>
